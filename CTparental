FILE_CONF="$DIR_CONF/CTparental.conf"
if [ -f "$DIR_CONF/CTparental.conf" ];then
    if [ $( grep -c "^LANG=" $FILE_CONF ) -ge 1 ] ;then
		export LANG=$( grep "^LANG" $FILE_CONF | cut -d "=" -f2 )
    fi
fi
